<div class="song-page">
    <div class="song-header">
        <a href="/songs/<%= song._id %>">
            <h2 class="song-title"><%= song.title %></h2>
        </a>
        <a href="/artists/<%= song.artist %>/songs">
            <h4 class="song-artist"><%= song.artist %></h4>
        </a>
        <h5 class="song-album"><%= song.album %></h5>
    </div>
    <div class="song-selector">
        <div class="song-select selected">full lyrics</div>
        <div class="song-select">chorus</div>
        <div class="song-select">verse</div>
        <div class="song-select">post-chorus</div>
    </div>
    <div class="song-lyrics">

        <p class="song-lyrics"><%= song.lyrics %></p>

    </div>
</div>
<% if (user && user.username === song.artist)  { %>
<div class="song-update-delete-btns">
    <a class="song-" href="/updateSong/<%= song._id %>">
        <div class="song-update-btn">update</div>
    </a>
    <a class="header" href="/deleteSong/<%= song._id %>">
        <div class="song-delete-btn">delete</div>
    </a>
</div>
<% } %>
<div class="comment-page">
    <div class="comment-header">
        <h2 class="comment-title">comments</h2>
        <% if (user) { %>
        <form action="/songs/<%= song._id %>" method="POST" class="add-comment">
            <label id="comment-label" for="comment">new</label>
            <input type="text" name="comment" id="comment" class="comment" />
            <button type="submit">add</button>
        </form>
        <% } %>
        <div class="comments">
            <% if (comments.length > 0) { %>
            <% comments.forEach((comment, i) => { %>
            <div class="comment">
                <p class="comment"><%= comment.content %></p>
                <h4 class="comment">from:
                    <a class="comment-author" href="/artists/<%= comment.author %>/songs"><%= comment.author %>
                    </a>
                </h4>
            </div>
            <% });  %>
            <% } else { %>
            <h4>no comments</h4>
            <% } %>
        </div>
    </div>
</div>